<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical">

           <TextView
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Grocery List      "
            android:textColor="#0000dd"
            android:textSize="28sp" />


            <ImageButton
                android:id="@+id/jumpbutton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="@color/yel"
                android:elevation="13dp"
                android:hint="Add to Shopping List"
                android:scaleType="fitXY"
                android:src="@drawable/rarrow"
                tools:src="@drawable/rarrow" />


    <ListView
        android:id="@+id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#060606"
        android:longClickable="true" />

    <TextView
        android:id="@+id/android:empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff807f03"
        android:text="NO GROCERIES YET" />

</LinearLayout>
